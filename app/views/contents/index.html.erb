<p id="notice"><%= notice %></p>

<h1>Contenuti</h1>

<table>
  <thead>
    <tr>
      <th>Titolo</th>
      <th>Descrizione</th>
      <th>Prezzo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.titolo %></td>
        <td><%= content.descrizione %></td>
        <td><%= content.price %></td>
        <td><%= link_to 'mostra', content_path(content) %></td>
        <td><%= link_to 'modifica', edit_content_path(content) %></td>
        <td><%= link_to 'elimina', content, method: :delete, data: { confirm: 'Sei sicuro ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo contenuto', new_content_path %>
